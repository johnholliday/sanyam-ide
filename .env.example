# Sanyam IDE Environment Configuration
# Copy this file to .env and fill in your values
#
# IMPORTANT: Supabase CLI reads OAuth credentials from .env (not .env.local).
# The file MUST be named .env for `env()` references in config.toml to resolve.

# =============================================================================
# Supabase Configuration (required for cloud features)
# =============================================================================

# Supabase project URL
SUPABASE_URL=https://your-project.supabase.co

# Supabase anonymous key (safe for client-side use)
SUPABASE_ANON_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...

# Supabase service role key (server-only, NEVER expose to client)
# Used for admin operations like tier lookups and background jobs
SUPABASE_SERVICE_ROLE_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...

# =============================================================================
# Authentication Configuration
# =============================================================================

# Auth mode: 'supabase' for cloud auth, 'none' for local-only
SANYAM_AUTH_MODE=supabase

# Comma-separated list of enabled auth providers
# Options: github, google, azure (or azure-ad), email
SANYAM_AUTH_PROVIDERS=github,google

# OAuth providers (for enterprise SSO flexibility)
SANYAM_OAUTH_PROVIDERS=github,google

# =============================================================================
# OAuth Provider Credentials (for local development)
# =============================================================================

# GitHub OAuth App
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=

# Google OAuth
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# Azure AD (Enterprise only)
AZURE_CLIENT_ID=
AZURE_CLIENT_SECRET=
AZURE_TENANT_URL=https://login.microsoftonline.com/your-tenant-id

# =============================================================================
# Tier and Licensing
# =============================================================================

# Default tier for new users: 'free', 'pro', or 'enterprise'
SANYAM_DEFAULT_TIER=free

# =============================================================================
# CORS Configuration (required in production)
# =============================================================================

# Allowed origin for CORS requests
# Use '*' for development, specific origin for production
SANYAM_CORS_ORIGIN=*

# =============================================================================
# Billing Integration (optional, for Stripe webhooks)
# =============================================================================

# Stripe webhook secret for signature verification
STRIPE_WEBHOOK_SECRET=whsec_...

# =============================================================================
# Development Settings
# =============================================================================

# Node environment
NODE_ENV=development

# Log level: 'debug', 'info', 'warn', 'error'
LOG_LEVEL=debug
