{
  "name": "@sanyam/grammar-ecml",
  "version": "0.0.1",
  "description": "Grammar package for ECML - Enterprise Content Modeling Language",
  "type": "module",
  "main": "./lib/index.js",
  "types": "./lib/index.d.ts",
  "exports": {
    ".": {
      "types": "./lib/index.d.ts",
      "import": "./lib/index.js"
    },
    "./manifest": {
      "types": "./lib/manifest.d.ts",
      "import": "./lib/manifest.js"
    },
    "./lib/src/browser/ecml-frontend-module": "./lib/src/browser/ecml-frontend-module.js"
  },
  "files": [
    "lib",
    "src"
  ],
  "scripts": {
    "clean": "rimraf lib *.tsbuildinfo",
    "build": "tsc -b",
    "build:langium": "langium generate"
  },
  "sanyam": {
    "grammar": true,
    "languageId": "ecml",
    "fileExtensions": [".ecml"]
  },
  "dependencies": {
    "@theia/core": "1.67.0",
    "langium": "^4.0.0"
  },
  "peerDependencies": {
    "@sanyam/types": "workspace:*"
  },
  "devDependencies": {
    "langium-cli": "^4.0.0",
    "rimraf": "^5.0.5",
    "typescript": "~5.6.3"
  },
  "theiaExtensions": [
    {
      "frontend": "lib/src/browser/ecml-frontend-module"
    }
  ]
}
