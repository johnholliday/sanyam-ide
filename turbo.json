{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "dependsOn": [
        "^build"
      ],
      "inputs": [
        "src/**",
        "tsconfig*.json",
        "package.json"
      ],
      "outputs": [
        "lib/**",
        "src/generated/**",
        "*.tsbuildinfo"
      ],
      "cache": true
    },
    "build:prod": {
      "dependsOn": [
        "^build"
      ],
      "inputs": [
        "src/**",
        "tsconfig*.json",
        "package.json"
      ],
      "outputs": [
        "lib/**",
        "src/generated/**",
        "*.tsbuildinfo"
      ],
      "cache": true
    },
    "sanyam-electron#build": {
      "dependsOn": [
        "^build",
        "sanyam-browser#build"
      ],
      "inputs": [
        "src/**",
        "tsconfig*.json",
        "package.json"
      ],
      "outputs": [
        "lib/**",
        "*.tsbuildinfo"
      ],
      "cache": true
    },
    "sanyam-electron#build:prod": {
      "dependsOn": [
        "^build",
        "sanyam-browser#build:prod"
      ],
      "inputs": [
        "src/**",
        "tsconfig*.json",
        "package.json"
      ],
      "outputs": [
        "lib/**",
        "*.tsbuildinfo"
      ],
      "cache": true
    },
    "sanyam-language-server#build": {
      "dependsOn": [
        "^build",
        "sanyam-language-server#build:vsix"
      ],
      "inputs": [
        "src/**",
        "tsconfig*.json",
        "package.json"
      ],
      "outputs": [
        "lib/**",
        "*.tsbuildinfo"
      ],
      "cache": true
    },
    "sanyam-language-server#build:prod": {
      "dependsOn": [
        "^build",
        "sanyam-language-server#build:vsix"
      ],
      "inputs": [
        "src/**",
        "tsconfig*.json",
        "package.json"
      ],
      "outputs": [
        "lib/**",
        "*.tsbuildinfo"
      ],
      "cache": true
    },
    "sanyam-language-server#build:bundle": {
      "dependsOn": [
        "sanyam-language-server#build"
      ],
      "outputs": [
        "out/**"
      ],
      "inputs": [
        "esbuild.mjs",
        "lib/**"
      ],
      "cache": true
    },
    "sanyam-language-server#build:vsix": {
      "dependsOn": [
        "^build"
      ],
      "outputs": [
        "syntaxes/**",
        "language-configurations/**",
        "src/generated/**"
      ],
      "inputs": [
        "scripts/build-vsix.ts",
        "../grammar-definitions/*/src/contribution.ts",
        "../grammar-definitions/*/manifest.ts",
        "../grammar-definitions/*/*.langium",
        "../../applications/*/package.json"
      ],
      "cache": true
    },
    "lint": {
      "cache": true
    },
    "lint:fix": {
      "cache": false
    },
    "test": {
      "dependsOn": [
        "build"
      ],
      "cache": true
    },
    "test:e2e": {
      "dependsOn": [
        "sanyam-browser#build"
      ],
      "cache": false
    },
    "clean": {
      "cache": false
    },
    "watch": {
      "persistent": true,
      "cache": false
    }
  }
}
