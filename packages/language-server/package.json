{
  "name": "@sanyam/language-server",
  "version": "0.0.1",
  "description": "Unified LSP/GLSP Language Server for Sanyam IDE",
  "license": "MIT",
  "type": "module",
  "main": "./lib/main.js",
  "types": "./lib/main.d.ts",
  "exports": {
    ".": {
      "types": "./lib/main.d.ts",
      "import": "./lib/main.js",
      "default": "./lib/main.js"
    },
    "./extension": {
      "types": "./lib/extension.d.ts",
      "import": "./lib/extension.js"
    },
    "./language-registry": {
      "types": "./lib/language-registry.d.ts",
      "import": "./lib/language-registry.js"
    }
  },
  "files": [
    "lib",
    "src",
    "syntaxes",
    "language-configurations"
  ],
  "scripts": {
    "build": "npm run generate:registry && tsc -b",
    "build:extension": "npm run build && npm run generate:vsix-manifest",
    "build:vsix": "npm run build && ts-node --esm scripts/build-vsix.ts",
    "clean": "rimraf lib tsconfig.tsbuildinfo syntaxes language-configurations",
    "watch": "tsc -b -w",
    "generate:registry": "ts-node --esm scripts/generate-grammar-registry.ts",
    "generate:vsix-manifest": "ts-node --esm scripts/generate-vsix-manifest.ts",
    "generate:textmate": "ts-node --esm scripts/build-vsix.ts",
    "package:vsix": "npm run build:vsix && vsce package"
  },
  "dependencies": {
    "@sanyam/types": "workspace:*",
    "@eclipse-glsp/server-node": "^1.0.0",
    "inversify": "^6.0.1",
    "langium": "^4.0.0",
    "vscode-languageserver": "^9.0.1",
    "vscode-languageserver-textdocument": "^1.0.11",
    "vscode-uri": "^3.0.8"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "esbuild": "^0.20.0",
    "rimraf": "^5.0.5",
    "ts-node": "^10.9.2",
    "typescript": "~5.6.3",
    "vsce": "^2.15.0",
    "yaml": "^2.3.4"
  },
  "peerDependencies": {
    "vscode-languageclient": "^9.0.1"
  },
  "peerDependenciesMeta": {
    "vscode-languageclient": {
      "optional": true
    }
  },
  "keywords": [
    "langium",
    "lsp",
    "glsp",
    "language-server",
    "diagram"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/johnholliday/sanyam-ide.git"
  },
  "bugs": {
    "url": "https://github.com/johnholliday/sanyam-ide/issues"
  }
}