{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "ecml",
  "scopeName": "source.ecml",
  "patterns": [
    {
      "include": "#keywords"
    },
    {
      "include": "#comments"
    },
    {
      "include": "#numbers"
    }
  ],
  "repository": {
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.ecml",
          "match": "\\b(text|integer|decimal|date|boolean|currency|memo|termset|choice|SecurityGroup|Permission|RetentionLabel|SensitivityLabel|Activity|Task|Actor|Content|template|format|type|schema|TXT|DOCX|CSV|XLSX|PDF|MD|JSON|XML|Text|Csv|Excel|Word|PowerPoint|Markdown|Pdf|Script|Image|Diagram|Flowchart|OrgChart|Survey|Workflow|Do|Repeat|Until|If|status|this|pending|started|approved|rejected|complete|suspended|aborted|true|false)\\b"
        }
      ]
    },
    "comments": {
      "patterns": [
        {
          "name": "comment.line.double-slash",
          "match": "//.*$"
        },
        {
          "name": "comment.block",
          "begin": "/\\*",
          "end": "\\*/"
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric",
          "match": "\\b\\d+(\\.\\d+)?\\b"
        }
      ]
    }
  }
}
