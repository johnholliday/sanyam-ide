# Use hoisted node_modules for Theia/GLSP compatibility and Windows UNC path access
node-linker=hoisted
shamefully-hoist=true
auto-install-peers=true
strict-peer-dependencies=false
dedupe-peer-dependents=true

# Network timeout for large installs
fetch-timeout=100000

# Link workspace packages automatically
link-workspace-packages=true

# Allow build scripts for native modules
ignore-scripts=false
