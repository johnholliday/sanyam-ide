{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Debug: Browser Frontend",
      "type": "shell",
      "command": "bash",
      "args": ["scripts/launch-browser-debug.sh"],
      "isBackground": true,
      "problemMatcher": {
        "pattern": {
          "regexp": "^$"
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": "Starting browser backend",
          "endsPattern": "Theia app listening"
        }
      },
      "presentation": {
        "reveal": "always",
        "panel": "shared",
        "clear": true
      }
    }
  ]
}
