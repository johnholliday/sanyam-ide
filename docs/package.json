{
  "name": "ecml-docs",
  "private": true,
  "type": "module",
  "description": "User documentation for E C M L",
  "scripts": {
    "build": "eleventy",
    "dev": "eleventy --serve",
    "start": "eleventy --serve",
    "preview": "eleventy --serve --port 8080",
    "clean": "rimraf _site",
    "docker:build": "docker build -t ecml-docs .",
    "docker:run": "docker run -d -p 4000:80 --name ecml-docs ecml-docs",
    "docker:stop": "docker stop ecml-docs && docker rm ecml-docs"
  },
  "devDependencies": {
    "@11ty/eleventy": "^3.0.0",
    "@11ty/eleventy-navigation": "^0.3.5",
    "@11ty/eleventy-plugin-syntaxhighlight": "^5.0.0",
    "rimraf": "^5.0.0"
  }
}
