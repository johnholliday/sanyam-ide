{
  "name": "sanyam-language-server",
  "displayName": "Sanyam Language Server",
  "publisher": "sanyam",
  "version": "0.0.1",
  "description": "Unified LSP/GLSP Language Server for Sanyam IDE",
  "license": "MIT",
  "engines": {
    "vscode": "^1.85.0"
  },
  "type": "module",
  "main": "./out/extension.js",
  "types": "./lib/extension.d.ts",
  "exports": {
    ".": {
      "types": "./lib/main.d.ts",
      "import": "./lib/main.js",
      "default": "./lib/main.js"
    },
    "./server-factory": {
      "types": "./lib/server-factory.d.ts",
      "import": "./lib/server-factory.js"
    },
    "./extension": {
      "types": "./lib/extension.d.ts",
      "import": "./lib/extension.js"
    },
    "./language-registry": {
      "types": "./lib/language-registry.d.ts",
      "import": "./lib/language-registry.js"
    },
    "./contribution-loader": {
      "types": "./lib/discovery/contribution-loader.d.ts",
      "import": "./lib/discovery/contribution-loader.js"
    }
  },
  "files": [
    "lib",
    "out",
    "syntaxes",
    "language-configurations"
  ],
  "scripts": {
    "build": "tsc -b",
    "build:bundle": "node esbuild.mjs",
    "build:extension": "npm run build:vsix && npm run build && npm run build:bundle",
    "build:vsix": "ts-node --esm scripts/build-vsix.ts",
    "clean": "rimraf lib out tsconfig.tsbuildinfo syntaxes language-configurations src/generated",
    "watch": "tsc -b -w",
    "package:vsix": "npm run build:extension && vsce package --no-dependencies",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "dependencies": {
    "@eclipse-glsp/server": "^2.5.0",
    "@hono/node-server": "^1.13.7",
    "@sanyam/logger": "workspace:*",
    "@sanyam/types": "workspace:*",
    "@supabase/supabase-js": "^2.96.0",
    "better-sqlite3": "^11.7.0",
    "drizzle-orm": "^0.38.4",
    "hono": "^4.6.16",
    "inversify": "^6.0.1",
    "langium": "^4.1.0",
    "pino": "^9.6.0",
    "vscode-languageserver": "^9.0.1",
    "vscode-languageserver-textdocument": "^1.0.11",
    "vscode-uri": "^3.0.8",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@sanyam-grammar/ecml": "workspace:*",
    "@sanyam-grammar/spdevkit": "workspace:*",
    "@sanyam/grammar-scanner": "workspace:*",
    "@sanyam/test-utils": "workspace:*",
    "@types/better-sqlite3": "^7.6.12",
    "@types/node": "^20.0.0",
    "@types/vscode": "^1.85.0",
    "drizzle-kit": "^0.30.2",
    "esbuild": "^0.20.0",
    "reflect-metadata": "^0.2.2",
    "rimraf": "^5.0.5",
    "ts-node": "^10.9.2",
    "typescript": "~5.6.3",
    "vitest": "^2.1.9",
    "vsce": "^2.15.0",
    "vscode-languageclient": "^9.0.1",
    "yaml": "^2.3.4"
  },
  "peerDependencies": {
    "vscode-languageclient": "^9.0.1"
  },
  "peerDependenciesMeta": {
    "vscode-languageclient": {
      "optional": true
    }
  },
  "keywords": [
    "langium",
    "lsp",
    "glsp",
    "language-server",
    "diagram"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/johnholliday/sanyam-ide.git"
  },
  "bugs": {
    "url": "https://github.com/johnholliday/sanyam-ide/issues"
  },
  "activationEvents": [
    "onLanguage:ecml"
  ],
  "contributes": {
    "languages": [
      {
        "id": "ecml",
        "aliases": [
          "Ecml",
          "ecml"
        ],
        "extensions": [
          ".ecml"
        ],
        "configuration": "./language-configurations/ecml.json"
      }
    ],
    "grammars": [
      {
        "language": "ecml",
        "scopeName": "source.ecml",
        "path": "./syntaxes/ecml.tmLanguage.json"
      }
    ]
  }
}
